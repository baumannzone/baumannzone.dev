---
interface Props {
  date: Date;
  className?: string;
  type?: "pubDate" | "updatedDate";
}

const { date, className, type = "pubDate" } = Astro.props;
---

<time
  datetime={date.toISOString()}
  class={className}
  itemprop={type === "pubDate" ? "datePublished" : "dateModified"}
>
  {
    date.toLocaleDateString("es-ES", {
      year: "numeric",
      month: "short",
      day: "2-digit",
    })
  }
</time>
