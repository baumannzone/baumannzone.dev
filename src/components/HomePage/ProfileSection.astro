---
import { Image } from 'astro:assets';
import baumannzoneImg from './baumannzone.webp';
---

<section class='d-block bg-gray-100 dark:bg-gray-800 pb-16'>
  <div class='bg-gradient-to-r from-violet-800 to-violet-700 h-44'></div>
  <div class='px-2 sm:px-4 lg:px-8'>
    <div
      class='bmn-container bg-white dark:bg-gray-700 dark:text-gray-100 mx-auto -mt-16 rounded-md'
    >
      <div class='flex justify-center'>
        <Image
          src={baumannzoneImg}
          alt='Jorge Baumann @Baumannzone profile photo'
          class='-mt-20 rounded-full ring-8 ring-violet-700 ring-opacity-100'
          width='140'
          height='135'
        />
      </div>
      <header class='text-center p-4'>
        <h1 class='font-bold text-3xl' title='@baumannzone'>Jorge Baumann</h1>
        <p class='text-gray-500 dark:text-gray-400 font-light'>
          Senior Full Stuck Developer <span class='select-none'>·</span> @baumannzone
        </p>
        <p class='font-light text-xl mt-4 mx-8 md:mx-16 text-balance'>
          Ingeniero de software y creador de contenido. Speaker. Apasionado del
          desarrollo web y de las comunidades. Disfruta enseñando y aprendiendo.
        </p>
      </header>
      <div class='flex justify-center px-4 pt-4 pb-8'>
        <a
          href='https://instagram.com/baumannzone'
          target='_blank'
          rel='noopener noreferrer'
          class='text-black dark:text-gray-300 hover:text-gray-500 dark:hover:text-gray-400 mx-2'
          ><span class='sr-only'>instagram</span>
          <svg
            xmlns='http://www.w3.org/2000/svg'
            width='25'
            height='25'
            viewBox='0 0 24 24'
            aria-labelledby='instagram'
            role='presentation'
            ><title id='instagram' lang='en'>instagram icon</title>
            <g fill='currentColor'
              ><path
                d='M12 0C8.74 0 8.333.015 7.053.072 5.775.132 4.905.333 4.14.63c-.789.306-1.459.717-2.126 1.384S.935 3.35.63 4.14C.333 4.905.131 5.775.072 7.053.012 8.333 0 8.74 0 12s.015 3.667.072 4.947c.06 1.277.261 2.148.558 2.913.306.788.717 1.459 1.384 2.126.667.666 1.336 1.079 2.126 1.384.766.296 1.636.499 2.913.558C8.333 23.988 8.74 24 12 24s3.667-.015 4.947-.072c1.277-.06 2.148-.262 2.913-.558.788-.306 1.459-.718 2.126-1.384.666-.667 1.079-1.335 1.384-2.126.296-.765.499-1.636.558-2.913.06-1.28.072-1.687.072-4.947s-.015-3.667-.072-4.947c-.06-1.277-.262-2.149-.558-2.913-.306-.789-.718-1.459-1.384-2.126C21.319 1.347 20.651.935 19.86.63c-.765-.297-1.636-.499-2.913-.558C15.667.012 15.26 0 12 0zm0 2.16c3.203 0 3.585.016 4.85.071 1.17.055 1.805.249 2.227.415.562.217.96.477 1.382.896.419.42.679.819.896 1.381.164.422.36 1.057.413 2.227.057 1.266.07 1.646.07 4.85s-.015 3.585-.074 4.85c-.061 1.17-.256 1.805-.421 2.227-.224.562-.479.96-.899 1.382-.419.419-.824.679-1.38.896-.42.164-1.065.36-2.235.413-1.274.057-1.649.07-4.859.07-3.211 0-3.586-.015-4.859-.074-1.171-.061-1.816-.256-2.236-.421-.569-.224-.96-.479-1.379-.899-.421-.419-.69-.824-.9-1.38-.165-.42-.359-1.065-.42-2.235-.045-1.26-.061-1.649-.061-4.844 0-3.196.016-3.586.061-4.861.061-1.17.255-1.814.42-2.234.21-.57.479-.96.9-1.381.419-.419.81-.689 1.379-.898.42-.166 1.051-.361 2.221-.421 1.275-.045 1.65-.06 4.859-.06l.045.03zm0 3.678c-3.405 0-6.162 2.76-6.162 6.162 0 3.405 2.76 6.162 6.162 6.162 3.405 0 6.162-2.76 6.162-6.162 0-3.405-2.76-6.162-6.162-6.162zM12 16c-2.21 0-4-1.79-4-4s1.79-4 4-4 4 1.79 4 4-1.79 4-4 4zm7.846-10.405c0 .795-.646 1.44-1.44 1.44-.795 0-1.44-.646-1.44-1.44 0-.794.646-1.439 1.44-1.439.793-.001 1.44.645 1.44 1.439z'
              ></path></g
            ></svg
          ></a
        >

        <a
          href='https://twitch.tv/baumannzone'
          target='_blank'
          rel='noopener noreferrer'
          class='text-black dark:text-gray-300 hover:text-gray-500 dark:hover:text-gray-400 mx-2'
          ><span class='sr-only'>twitch</span>
          <svg
            xmlns='http://www.w3.org/2000/svg'
            width='25'
            height='25'
            viewBox='0 0 24 24'
            aria-labelledby='twitch'
            role='presentation'
            ><title id='twitch' lang='en'>twitch icon</title>
            <g fill='currentColor'
              ><path
                d='M11.571 4.714h1.715v5.143H11.57zm4.715 0H18v5.143h-1.714zM6 0L1.714 4.286v15.428h5.143V24l4.286-4.286h3.428L22.286 12V0zm14.571 11.143l-3.428 3.428h-3.429l-3 3v-3H6.857V1.714h13.714Z'
              ></path></g
            ></svg
          ></a
        >

        <a
          href='https://twitter.com/baumannzone'
          target='_blank'
          rel='noopener noreferrer'
          class='text-black dark:text-gray-300 hover:text-gray-500 dark:hover:text-gray-400 mx-2'
        >
          <span class='sr-only'>x</span>
          <svg
            xmlns='http://www.w3.org/2000/svg'
            width='25'
            height='25'
            viewBox='0 0 24 24'
            aria-labelledby='x'
            role='presentation'
          >
            <title id='twitter' lang='en'>X icon</title>
            <g fill='currentColor'>
              <path
                d='M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932ZM17.61 20.644h2.039L6.486 3.24H4.298Z'
              >
              </path>
            </g>
          </svg>
        </a>

        <a
          href='https://youtube.com/RambitoJS'
          target='_blank'
          rel='noopener noreferrer'
          class='text-black dark:text-gray-300 hover:text-gray-500 dark:hover:text-gray-400 mx-2'
          ><span class='sr-only'>youtube</span>
          <svg
            xmlns='http://www.w3.org/2000/svg'
            width='25'
            height='25'
            viewBox='0 0 24 24'
            aria-labelledby='youtube'
            role='presentation'
            ><title id='youtube' lang='en'>youtube icon</title>
            <g fill='currentColor'
              ><path
                d='M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z'
              ></path></g
            ></svg
          ></a
        >
      </div>
    </div>
  </div>
</section>
