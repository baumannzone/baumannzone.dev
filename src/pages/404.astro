  <style>
    .matrix-pill-button::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 50%;
      height: 100%;
      background-color: #0066cc; /* Azul Matrix */
      transform: translateX(-100%);
      transition: transform 0.3s ease;
      z-index: 1;
    }

    .matrix-pill-button::after {
      content: "";
      position: absolute;
      top: 0;
      right: 0;
      width: 50%;
      height: 100%;
      background-color: #cc0000; /* Rojo Matrix */
      transform: translateX(100%);
      transition: transform 0.3s ease;
      z-index: 1;
    }

    .matrix-pill-button:hover::before {
      transform: translateX(0);
    }

    .matrix-pill-button:hover::after {
      transform: translateX(0);
    }
  </style>

  <script type="module" src="/src/utils/matrix.js"></script>
