---
import Layout from "../../layouts/DefaultLayout.astro";
import { getCollection } from "astro:content";

const talks = await getCollection("talks");
talks.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Talks | baumannzone.dev">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Talks</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {
        talks.map((talk) => (
          <a href={`/talks/${talk.slug}`} class="block group">
            <article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden transition-transform duration-200 hover:scale-105">
              {talk.data.image && (
                <img
                  src={talk.data.image}
                  alt={talk.data.title}
                  class="w-full h-48 object-cover"
                />
              )}
              <div class="p-6">
                <h2 class="text-xl font-semibold mb-2 group-hover:text-violet-500">
                  {talk.data.title}
                </h2>
                <p class="text-gray-600 dark:text-gray-300 mb-4">
                  {new Date(talk.data.date).toLocaleDateString("es-ES", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </p>
                <p class="text-gray-700 dark:text-gray-400">
                  {talk.data.event}
                </p>
              </div>
            </article>
          </a>
        ))
      }
    </div>
  </main>
</Layout>
